    private void botonSustituirMouseClicked(java.awt.event.MouseEvent evt) {                                            
        // TODO add your handling code here:
        try {
            double n1 = Double.parseDouble(valor_final.getText());
            int VALOR_FINAL = (int) n1;

            int iterador = 1;
            StringBuilder resultado = new StringBuilder(); // Para concatenar todos los resultados

            // Bucle para verificar los múltiplos de 3 y 5
            while (iterador <= VALOR_FINAL) {
                String numeracion;

                if (iterador % 3 == 0) {
                    numeracion = "Licenciatura";
                } else if (iterador % 5 == 0) {
                    numeracion = "Informática";
                } else {
                    numeracion = Integer.toString(iterador);
                }

                resultado.append(numeracion).append(" "); // Agregar cada resultado al StringBuilder
                iterador++;
            }

            mostrarNumeracion.setText(resultado.toString());
            mostrarNumeracion.setEditable(false);

        } catch (Exception e) {
            // Manejo de excepciones si el valor ingresado no es un número

        }
    }                                           


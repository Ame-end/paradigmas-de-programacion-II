    private void botonJugarMouseClicked(java.awt.event.MouseEvent evt) {                                        
        // TODO add your handling code here:

        // TODO add your handling code here:
        Random random = new Random();
        int numeroAleatorio = random.nextInt(100) + 1; // Generar un número aleatorio entre 1 y 100
        int numeroIngresado = 0; // Inicializar la variable para el número ingresado
        int numeroIntentos = 0; // Inicializar el contador de intentos
        boolean bandera = false; // Usar un booleano para controlar si el número fue adivinado

       
        try {
            // Leer el número ingresado desde el campo de texto
            numeroIngresado = Integer.parseInt(numeroAdivinar.getText());
            numeroIntentos++; // Incrementar el contador de intentos

            // Comprobar si el número ingresado es correcto
            if (numeroIngresado == numeroAleatorio) {
                bandera = true;
                mostrarResultado.setText("¡Felicidades! Has adivinado el número en " + numeroIntentos + " intento(s).");
            } else if (numeroIngresado < numeroAleatorio) {
                mostrarResultado.setText("Número menor, el resultado es: " + numeroAleatorio);
            } else {
                mostrarResultado.setText("Número menor, el resultado es: " + numeroAleatorio);
            }

        } catch (NumberFormatException e) {
            // Manejo de excepciones si la entrada no es un número entero válido
            mostrarResultado.setText("Por favor, ingrese un número entero válido.");
        }
    }                                       


    private void botonArea_CIRCULOMouseClicked(java.awt.event.MouseEvent evt) {                                               
        // TODO add your handling code here:
        try {
            double radio = Double.parseDouble(radioUsuario.getText());
            double area = 3.1416 * Math.pow(radio, 2); // Usar Math.pow para calcular el cuadrado del radio

            mostrarResultado.setText(Double.toString(area)+ " cm^2"); // Convertir el resultado a String
            mostrarResultado.setEditable(false);
        } catch (Exception e) {
            mostrarResultado.setText("Ingrese un valor válido para el radio.");
        }
    }                                              

    private void botonArea_RECTANMouseClicked(java.awt.event.MouseEvent evt) {                                              
        // TODO add your handling code here:
         try {
            double base = Double.parseDouble(baseUsuario.getText());
             double altura = Double.parseDouble(alturaUsuario.getText());
            double area = base * altura; 

            mostrarResultado.setText(Double.toString(area)+" cm^2"); // Convertir el resultado a String
            mostrarResultado.setEditable(false);
        } catch (Exception e) {
            mostrarResultado.setText("Valor incorrecto.");
        }
    }                                             

    private void botonPerimetro_CIRCULOMouseClicked(java.awt.event.MouseEvent evt) {                                                    
        // TODO add your handling code here:
         try {
            double radio = Double.parseDouble(radioUsuario.getText());
            
            double perimetro = 2 * 3.1416 * radio ; 

            mostrarResultado.setText(Double.toString(perimetro)+" cm"); // Convertir el resultado a String
            mostrarResultado.setEditable(false);
        } catch (Exception e) {
            mostrarResultado.setText("Valor incorrecto.");
        }
    }                                                   

    private void botonPerimetro_RECTANGULOMouseClicked(java.awt.event.MouseEvent evt) {                                                       
        // TODO add your handling code here:
        try {
            double base = Double.parseDouble(baseUsuario.getText());
            double altura = Double.parseDouble(alturaUsuario.getText());
            double perimetro = 2 * (base + altura) ; 

            mostrarResultado.setText(Double.toString(perimetro)+" cm"); // Convertir el resultado a String
            mostrarResultado.setEditable(false);
        } catch (Exception e) {
            mostrarResultado.setText("Valor incorrecto.");
        }
    }                                                      

